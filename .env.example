# Application
APP_NAME="Bagisto E-commerce"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Ho_Chi_Minh

# Localization
APP_LOCALE=vi
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=vi_VN
APP_CURRENCY=VND

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=
DB_PREFIX=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_STORE=file
CACHE_PREFIX=bagisto_cache

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=sync
BROADCAST_CONNECTION=log

# Mail Configuration (using Mailpit for development)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@bagisto.local
MAIL_FROM_NAME="${APP_NAME}"

# Admin Configuration
ADMIN_MAIL_ADDRESS=admin@bagisto.local
ADMIN_MAIL_NAME="Admin"

# Elasticsearch Configuration
SCOUT_DRIVER=elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# File System
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true
APP_DEBUG_ALLOWED_IPS=*

# Response Cache
RESPONSE_CACHE_ENABLED=true

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_HOST=0.0.0.0
VITE_PORT=5173

# Docker Environment Variables
WWWGROUP=1000
WWWUSER=1000
APP_PORT=8000
DB_PORT=3306
REDIS_PORT=6379
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_PORT2=9300
KIBANA_PORT=5601
MAILPIT_SMTP_PORT=1025
MAILPIT_WEB_PORT=8025
PHPMYADMIN_PORT=8080
FORCE_HTTPS=true
